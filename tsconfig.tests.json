{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "lib",
		//"importHelpers": true,
		//"experimentalDecorators": true,
		//"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
